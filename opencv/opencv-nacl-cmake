ARCH=$1 BIT=$2
NACL=$(dirname $NACL_PREFIX)/bin/$ARCH-nacl
cmake \
-D CMAKE_SYSTEM_NAME:STRING=Linux \
-D CMAKE_INSTALL_PREFIX:STRING=$NACL_PREFIX \
-D BUILD_SHARED_LIBS:BOOL=ON \
-D BUILD_PACKAGE:BOOL=OFF \
-D BUILD_NEW_PYTHON_SUPPORT:BOOL=OFF \
-D CMAKE_CXX_FLAGS:STRING="-m$BIT" \
-D CMAKE_C_FLAGS:STRING="-m$BIT" \
-D BUILD_TESTS:BOOL=OFF \
-D BUILD_NEW_PYTHON_SUPPORT:BOOL=OFF \
-D BUILD_WITH_DEBUG_INFO:BOOL=OFF \
-D WITH_1394:BOOL=OFF \
-D WITH_CUBLAS:BOOL=OFF \
-D WITH_CUDA:BOOL=OFF \
-D WITH_CUFFT:BOOL=OFF \
-D WITH_FFMPEG:BOOL=OFF \
-D WITH_GSTREAMER:BOOL=OFF \
-D WITH_GTK:BOOL=OFF \
-D WITH_JASPER:BOOL=OFF \
-D WITH_OPENEXR:BOOL=OFF \
-D WITH_OPENGL:BOOL=OFF \
-D WITH_PNG:BOOL=OFF \
-D WITH_PVAPI:BOOL=OFF \
-D WITH_QT:BOOL=OFF \
-D WITH_TBB:BOOL=OFF \
-D WITH_TIFF:BOOL=OFF \
-D WITH_UNICAP:BOOL=OFF \
-D WITH_V4L:BOOL=OFF \
-D WITH_XIMEA:BOOL=OFF \
-D WITH_XINE:BOOL=OFF \
-D WITH_TIFF:BOOL=OFF \
-D WITH_JASPER:BOOL=OFF \
-D WITH_OPENNI:BOOL=OFF \
-D WITH_JPEG:BOOL=ON \
-D BUILD_opencv_ts:BOOL=OFF \
-D CMAKE_C_COMPILER:FILEPATH=$NACL-gcc \
-D CMAKE_CXX_COMPILER:FILEPATH=$NACL-c++ \
-D CMAKE_AR:FILEPATH=$NACL-ar \
-D CMAKE_LINKER:FILEPATH=$NACL-ld \
-D CMAKE_NM:FILEPATH=$NACL-nm \
-D CMAKE_OBJCOPY:FILEPATH=$NACL-objcopy \
-D CMAKE_OBJDUMP:FILEPATH=$NACL-objdump \
-D CMAKE_RANLIB:FILEPATH=$NACL-ranlib \
-D CMAKE_STRIP:FILEPATH=$NACL-strip \
-D JPEG_LIBRARY:FILEPATH=$NACL_PREFIX/lib$BIT/libjpeg.so \
-D JPEG_INCLUDE_DIR:FILEPATH=$NACL_PREFIX/include \
-D ZLIB_LIBRARY:FILEPATH=$NACL_PREFIX/lib$BIT/libz.so \
-D ZLIB_INCLUDE_DIR:FILEPATH=$NACL_PREFIX/include \
-D BZIP2_LIBRARIES:FILEPATH=$NACL_PREFIX/lib$BIT/libbz2.so \
../../
